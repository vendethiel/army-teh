
.recipe-add-container
  button(ng-click="showForm = !showForm", class="btn btn-primary recette")
    span(ng-hide="showForm") Ajouter une recette
    span(ng-show="showForm") Cacher le formulaire

  include recipe_form

.category-block(ng-repeat="category in categories" ng-show="category.recipes.length")
  h3 {{category.name}} ({{category.recipes.length}})
  ul
    li(ng-repeat="recipe in category.recipes")
      a(ng-href="recipe/{{recipe.id}}") {{recipe.name}}
  hr
